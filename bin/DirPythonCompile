#!/usr/bin/python

import sys,os, os.path


try :
    os.chdir(sys.argv[1])
    sys.path = ['.'] + sys.path

#    if len(sys.argv) > 1 :
#	l = sys.argv[1:] 
#    else :
    l = [ p for p in os.listdir('.') if p[-3:] == '.py']

    for i in l :
	i = i.replace('.py','')
        i = i.replace('/','.')
	__import__(i, globals(), locals(), [''])


except :
    pass

